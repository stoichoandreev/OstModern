<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_resource">
    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:scaleType="centerCrop"/>
    <uk.ostmodern.incoming.test.custom.OstModernCustomTextView
        android:id="@+id/grid_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:layout_alignParentBottom="true"
        android:background="@color/black_with_80_percent_opacity"
        android:gravity="center"
        android:textSize="10sp"
        android:lines="2"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <ImageView
        android:id="@+id/grid_pay_or_not_label"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/free"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/image_loader_progress_bar_large"
        android:layout_centerInParent="true"/>

    <include
        layout="@layout/disable_view_layout"/>

</RelativeLayout>