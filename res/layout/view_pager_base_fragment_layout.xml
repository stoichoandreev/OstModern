<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_background"
        android:padding="3dp">
        <uk.ostmodern.incoming.test.custom.ObservableScrollView
            android:id="@+id/product_details_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/details_main_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:id="@+id/details_main_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/parallax_image_height"
                        android:scaleType="centerCrop"/>
                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/image_loader_progress_bar_large"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <View
                    android:id="@+id/anchor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parallax_image_height"
                    android:minHeight="@dimen/parallax_image_height" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/details_main_image_container">
                    <uk.ostmodern.incoming.test.custom.OstModernCustomTextView
                        android:id="@+id/view_pager_large_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/toolbar_color"
                        android:layout_alignParentTop="true"
                        android:gravity="left"
                        android:text="@string/app_name"
                        android:shadowColor="@color/black_with_80_percent_opacity"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="2"
                        android:padding="@dimen/large_text_padding"
                        android:layout_marginBottom="5dp"/>
                    <uk.ostmodern.incoming.test.custom.OstModernCustomTextView
                        android:id="@+id/items_section_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/large_text_padding"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="@color/header_text_color"
                        android:text="@string/items"
                        android:layout_below="@+id/view_pager_large_text"
                        android:shadowColor="@color/black_with_80_percent_opacity"
                        android:shadowDx="1"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:layout_margin="5dp" />
                    <uk.ostmodern.incoming.test.custom.OstModernCustomTextView
                        android:id="@+id/no_items_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_items"
                        android:textColor="@color/black_with_40_percent_opacity"
                        android:gravity="center"
                        android:layout_below="@+id/items_section_header"/>
                    <ListView
                        android:id="@+id/items_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/items_section_header"/>

                </RelativeLayout>

                <uk.ostmodern.incoming.test.custom.OstModernCustomTextView
                    android:id="@+id/view_pager_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:gravity="left|center"
                    android:shadowColor="@color/black_with_80_percent_opacity"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"
                    android:text="@string/app_name"
                    android:padding="@dimen/large_text_padding"
                    android:layout_margin="5dp"/>
                <include
                    layout="@layout/disable_view_layout"/>

            </RelativeLayout>
        </uk.ostmodern.incoming.test.custom.ObservableScrollView>
    </RelativeLayout>

</RelativeLayout>